<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/sent_round_box"
        android:backgroundTint="@color/chat_bubble_green"
        android:padding="14dp"
        android:text="@string/human_default_message"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        tools:targetApi="lollipop" />

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_bot_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/received_round_box"
        android:backgroundTint="@color/colorAccent"
        android:padding="14dp"
        android:text="@string/bot_default_message"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_alignParentLeft="true" />


</RelativeLayout>